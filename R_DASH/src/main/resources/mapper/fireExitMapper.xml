<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.pcwk.ehr.mapper.FireExitMapper">

	<resultMap id="FireExitMap"
		type="com.pcwk.ehr.domain.FireExitDTO">
		<id property="exitNo" column="EXIT_NO" />
		<result property="subNo" column="SUB_NO" />
		<result property="subName" column="SUB_NAME" />
		<result property="udGr" column="UD_GR" />
		<result property="locPl" column="LOC_PL" />
	</resultMap>

	<sql id="Base_Columns">
		EXIT_NO, SUB_NO, SUB_NAME, UD_GR, LOC_PL
	</sql>

	<!-- PK 단건 조회 -->
	<select id="selectById" resultMap="FireExitMap">
		SELECT
		<include refid="Base_Columns" />
		FROM JM.FIRE_EXIT
		WHERE EXIT_NO = #{exitNo}
	</select>

	<!-- 조건 목록 조회 -->
	<select id="selectList" resultMap="FireExitMap">
		SELECT
		<include refid="Base_Columns" />
		FROM JM.FIRE_EXIT
		<where>
			<if test="subNo != null and subNo != ''">
				AND SUB_NO = #{subNo}
			</if>
			<if test="subName != null and subName != ''">
				AND SUB_NAME LIKE '%' || #{subName} || '%'
			</if>
			<if test="udGr != null and udGr != ''">
				AND UD_GR = #{udGr}
			</if>
			<if test="locPl != null and locPl != ''">
				AND LOC_PL = #{locPl}
			</if>
		</where>
		ORDER BY EXIT_NO DESC
	</select>

	<select id="count" resultType="int">
		SELECT COUNT(1) FROM JM.FIRE_EXIT
	</select>
</mapper>